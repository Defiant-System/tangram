<MenuBar>
	<Menu name="Tangram">
		<Menu name="About Tangram" shell="win -a"/>
		<Menu type="divider"/>
		<Menu name="Quit Tangram" shell="win -c"/>
	</Menu>
	<Menu name="Game" for="game-board">
		<Menu name="Shuffle" click="shuffle-pieces"/>
		<Menu name="Solve" click="solve-puzzle"/>
		<Menu type="divider"/>
		<Menu name="Theme&#8230;">
			<Menu name="Classic" click="set-theme" arg="classic" check-group="game-theme"/>
			<Menu name="Pastell" click="set-theme" arg="pastell" check-group="game-theme"/>
			<Menu name="Sunset" click="set-theme" arg="sunset" check-group="game-theme"/>
		</Menu>
		<Menu name="Level&#8230;">
			<Menu name="Blank" click="toggle-background"/>
			<Menu type="divider"/>
			<Menu name="Box" click="set-level" arg="1.0" check-group="game-level"/>
			<Menu name="House" click="set-level" arg="1.1" check-group="game-level"/>
			<Menu name="Boat" click="set-level" arg="1.2" check-group="game-level"/>
			<Menu name="Tree" click="set-level" arg="1.3" check-group="game-level"/>
			<Menu name="Goose" click="set-level" arg="1.4" check-group="game-level"/>
			<Menu name="Camel" click="set-level" arg="1.5" check-group="game-level"/>
		</Menu>
		<Menu type="divider"/>
		<Menu name="Output PGN" click="output-pgn"/>
	</Menu>
	<Menu name="Help">
		<Menu name="Help" click="open-help"/>
		<Menu type="divider"/>
		<Menu name="License" shell="win -al"/>
	</Menu>
</MenuBar>