<MenuBar>
	<Menu name="Tangram">
		<Menu name="About Tangram" shell="win -a"/>
		<Menu type="divider"/>
		<Menu name="Quit Tangram" shell="win -c"/>
	</Menu>
	<Menu name="Game" for="game-board">
		<Menu name="Box" click="draw-puzzle" arg="1.0"/>
		<Menu name="Tree" click="draw-puzzle" arg="1.1"/>
		<Menu name="House" click="draw-puzzle" arg="1.2"/>
		<Menu type="divider"/>
		<Menu name="Output PGN" click="output-pgn"/>
	</Menu>
	<Menu name="Help">
		<Menu name="Help" click="open-help"/>
		<Menu type="divider"/>
		<Menu name="License" shell="win -al"/>
	</Menu>
</MenuBar>